{
  "name": "Snipper",
  "productName": "Snipper",
  "version": "1.0.0",
  "description": "A simple desktop app that lets you save your most frequently used Code Snippets with syntax highlighting.",
  "main": "./main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CB --version-string.FileDescription=CB --version-string.ProductName=\"Snipper\"",
    "create-installer-mac": "electron-installer-dmg ./release-builds/Snipper app-darwin-x64/Snipper app.app Snipper --out=release-builds --overwrite",
    "create-installer-win": "node installers/windows/createinstaller.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^1.6.6",
    "mongodb": "^2.2.28",
    "path": "^0.12.7",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "electron": "^1.4.3",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^8.1.0",
    "electron-winstaller": "^2.5.2"
  }
}
